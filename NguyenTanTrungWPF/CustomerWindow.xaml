<Window x:Class="NguyenTanTrungWPF.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenTanTrungWPF"
        mc:Ignorable="d"
        Title="Customer" Height="720" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="640"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Margin="700 5 0 0">
            <Button x:Name="btnLogout" Content="Logout" Click="btnLogout_Click"/>
        </Canvas>
        <Frame Grid.Row="1" Name="frMain"/>
        <StatusBar Grid.Row="2">
            <TextBlock Name="tbWelcome"/>
        </StatusBar>
    </Grid>
</Window>
